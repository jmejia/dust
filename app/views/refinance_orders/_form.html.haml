= content_for :head do
  = javascript_include_tag :ckeditor

- form_for @refinance_order, :validate => true do |f|
  = f.error_messages
  .item 
    = f.label :mortgage_amount
    %br
    = f.text_field :mortgage_amount, :class => 'field'
  .item 
    = f.label :owners_names, "Owners' names"
    %br
    = f.text_area :owners_names, :class => 'field'
  .item 
    = f.label :property_address
    %br
    = f.text_field :property_address, :class => 'field'
  .item 
    = f.label :need_by_date
    %br
    = f.date_select :need_by_date, :class => 'field'
  .item 
    = f.label :have_prior_title, "Do you have a prior title?"
    = f.check_box :have_prior_title
  %br/
  .item 
    = f.label :additional_info
    %br
    = f.text_area :additional_info, :class => 'field'
  .item 
    = render 'users/order_info', order: @refinance_order
  .item
    = f.submit
