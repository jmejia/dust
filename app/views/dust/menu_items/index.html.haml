- title "Menu Items"
.button_bar
  = render :partial => 'search'
  = link_to('manage menu items', dust_menu_manage_path, :class => 'batch tip', :title => "Manage Menu Items")
  = link_to('new menu item', new_dust_menu_item_path, :class => 'newfile tip', :title => "New Menu Item")
= will_paginate @menu_items
- @menu_items.each do |menu_item|
  .item
    .ui-widget.ui-helper-clearfix{:style => "float:right"}
      = link_to "", edit_dust_menu_item_path(menu_item), :class => 'ui-icon	ui-icon-pencil edit tip', :title => "Edit This Item"
      = link_to "", menu_item, :confirm => 'Are you sure?', :method => :delete, :class => 'ui-icon ui-icon-close destroy tip', :title => "Destroy This Item"
    %h3= menu_item.title.capitalize
    - unless menu_item.linkable_type.blank?
      %p
        Type:
        %strong= menu_item.linkable_type.capitalize
= will_paginate @menu_items
