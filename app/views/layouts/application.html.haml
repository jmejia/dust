!!! 5
%html{ :class => content_classes }
  %head
    %title= h(yield(:title) || "Dust")
    %meta{:content => h(@keywords), :name => "keywords"}/
    %meta{:content => yield(:description) + @app_config["site_info"]["default_description"], :name => "description"}/
    = stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600', 'http://fonts.googleapis.com/css?family=Julius+Sans+One'
    = csrf_meta_tag
    = yield(:head)
  %body
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
    #container
      = block_region 'header_one'
      = block_region 'header_two'
      = block_region 'slider'
      = block_region 'callouts'
      = yield
      = block_region 'footer_one'
      = block_region 'footer_two'
      = render :partial => 'users/user_bar'
      = render :partial => 'view_page/admin'

  = javascript_include_tag 'application'
  = yield(:js)
  = render :partial => 'layouts/app_partials/analytics'
