- title "Testimonial"

.item{:class => @testimonial.approved ? "approved" : "unapproved" }

  .ui-widget.ui-helper-clearfix{:style => "float:right"}
    =link_to '', edit_testimonial_path(@testimonial), :class => 'ui-icon ui-icon-pencil edit tip', :title => "Edit This Item"
    =link_to "", @testimonial, :confirm => 'Are you sure?', :method => :delete, :class => 'ui-icon ui-icon-close destroy tip', :title => "Destroy This Item"

  %p= link_to @testimonial.quote, @testimonial
  %p
    = link_to "Preview Testimonial", @testimonial, :class => 'remote_iframe'

  %p
    %strong Quote:
    = @testimonial.quote
  %p
    %strong Attribution:
    = @testimonial.attribution

