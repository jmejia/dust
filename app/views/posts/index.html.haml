- title "Posts" 

.button_bar
  = render :partial => 'search'
  = link_to 'new page', new_post_path, :class => 'newfile tip', :title => "New Post"

= will_paginate @posts

- @posts.each do |post|
  .item
    .ui-widget.ui-helper-clearfix{:style => 'float:right'}
      = link_to '', edit_post_path(post), :class => 'ui-icon	ui-icon-pencil edit tip', :title => "Edit This Item"
      = link_to '', post, :confirm => 'Are you sure?', :method => :delete, :class => 'ui-icon ui-icon-close destroy tip', :title => "Destroy This Item"

    %h3= link_to post.title, post
    %p
      = link_to "Preview Post", post, :class => 'remote_iframe'

= will_paginate @posts 
