!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= h(yield(:title) || "Dust")
    = stylesheet_link_tag 'cms'
    = javascript_include_tag 'cms'
    = yield(:head)
  %body
    .wrapper.login
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = yield
