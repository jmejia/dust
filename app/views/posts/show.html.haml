- title "Post"

.item

  .ui-widget.ui-helper-clearfix{:style => "float:right"}
    =link_to '', edit_post_path(@post), :class => 'ui-icon ui-icon-pencil edit tip', :title => "Edit This Item"
    =link_to "", @post, :confirm => 'Are you sure?', :method => :delete, :class => 'ui-icon ui-icon-close destroy tip', :title => "Destroy This Item"
  %h3= link_to @post.title, post_path(@post)
  %p
    = link_to "Preview Post", post_path(@post), :class => 'remote_iframe'
  %p
    %strong Url:
    = @post.slug
  %p
    %strong Published on:
    = @post.published_at
  %p
    %strong Published:
    = @post.published

  %p 
    %strong Content:
    %br/
    = raw @post.content
  .image-preview
    %strong Current Image:
    %br/
    = image_tag @post.image_url(:thumb)
    %br/
    = @post.image
