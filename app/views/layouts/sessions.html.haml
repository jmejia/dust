!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= h(yield(:title) || "Dust")
    = stylesheet_link_tag 'reset', 'login', 'jquery.fancybox-1.3.1'
    = javascript_include_tag 'jquery-1.4.2', 'jquery-ui-1.8.5.custom.min', 'jquery.easing-1.3.pack', 'jquery.fancybox-1.3.1.pack', 'login'
    = yield(:head)
  %body
    #header
      .logo
        = image_tag("smallogo.png", :height => "50", :alt => "Dust CMS | The Super Simple CMS")
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = yield
