- title "Newsletter"

.item

  .ui-widget.ui-helper-clearfix{:style => "float:right"}
    =link_to '', edit_newsletter_path(@newsletter), :class => 'ui-icon ui-icon-pencil edit tip', :title => "Edit This Item"
    =link_to "", @newsletter, :confirm => 'Are you sure?', :method => :delete, :class => 'ui-icon ui-icon-close destroy tip', :title => "Destroy This Item"

  %h3= link_to @newsletter.title, @newsletter
  %p
    = link_to "Preview Newsletter", @newsletter, :class => 'remote_iframe'

  %p
    %strong Title:
    = @newsletter.title
  %p
    %strong Document:
    = link_to @newsletter.document, @newsletter.document.url
  %p
    %strong Summary:
    = @newsletter.summary

