%li{:id => "photo_#{photo.id}"}
  %div{:class => "photo photo_#{photo.id}"}
    %script{:charset => "utf-8", :type => "text/javascript"}
      $("a.settings").fancybox({
      'showCloseButton' : false,
      'transitionIn'  : 'elastic',
      'transitionOut' : 'elastic',
      'speedIn'   : 400,
      'speedOut'    : 200,
      'hideOnContentClick': false,
      'overlayOpacity' : 0.6,
      'overlayColor' : '#000',
      'opacity' : 'true'
      });
    = image_tag photo.file.url(:thumb), :height => '50'
    %br/
    = truncate photo.title, :length => 23
    %br/
    - unless photo.date_shot.blank?
      (#{photo.date_shot})
    = link_to "Edit Photo", edit_photo_path(photo.id, :format => 'html', :edit => "photo"), :class => "settings", :title => "Photo Settings"

